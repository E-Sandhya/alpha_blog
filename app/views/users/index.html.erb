<div class="users-bg">
<h1 class="text-center text-dark mt-4 mb-4 ">Alpha Bloggers</h1>

<div class="container">
  <% @users.each do |user|%>
    <div class="row justify-content-md-center">
      <div class="col-10 mt-4">
        <div class="card card-2 text-center rounded ml-5 mr-5">
          <div class="card-header font-weight-bold font-italic">
            <h5> <%= link_to user.username, user, class: "text-info" %></h5>
          </div>
          <div class="card-body div_a">
            <h5 class="card-title">
            
            <%= link_to user, :action => 'go' do%>
              <div><%= gravatar_for(user) %></div>
              
            <% end %>
            
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            
            <%= link_to 'View Profile', user, class: "btn btn-outline-success"%>
            <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-info"%>
            
          </div>
          <div class="card-footer text-muted">
            <small> Joined <%= time_ago_in_words(user.created_at)%> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
