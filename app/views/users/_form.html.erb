<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors', obj: @user%>

      <%= form_with(model: @user,class: "shadow p-3 mb-5 bg rounded", local: true) do |f| %>
      <div class="form-group row mt-5">
          <%= f.label :username, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username"%>
          </div>
      </div>
      <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email Address" %>
        </div>
      </div>
      <div class="form-group row mt-4">
          <%= f.label :password, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Choose password" %>
        </div>
      </div>
      <div class="form-group row mt-5 justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-large "%>
      </div>

      <% end %>
    </div>
    <%= link_to '[ cancel or return to article list ]', articles_path, class: "text-info h4" %>
  </div>
</div>