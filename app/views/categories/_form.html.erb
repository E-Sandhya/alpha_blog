 <%= render 'shared/errors', obj: @category  %>
  

  <%= form_with(model: @category,class: "shadow p-3 mb-5 bg rounded", local: true, validate: true) do |f| %>

  <div class="form-group row mt-5">
      <%= f.label :name, "Category Name", for: "user_input", class: "col-2 col-form-label text-light"%>
      <div class="col-10">
      <%= f.text_field :name, id: "user_input", class: "form-control shadow rounded", placeholder: "Enter name"%>
      <p class='error text-danger font-weight-bold'><%= show_errors(@category, :name) %></p>
      </div>
        
  </div>
  
  
  <div class="form-group row mt-2 justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-lg "%>
      
  </div>

  <% end %>