<div class="article-bg">
 
  <%= render 'layouts/messages'%>
  <h1 class="text-center text-white mt-5 mb-4">Category: <%= @category.name %></h1>
  
  
  <% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
      <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-info"%>
    </div>
  <% end %>
  <h3 class= " text-center mt-4"> Article </h3>
  <%= render 'articles/article' %>
  <div class="flickr_pagination mt-4 mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>