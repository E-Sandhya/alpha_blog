
<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors', obj: @article  %>

      <%= form_with(model: @article,class: "shadow p-3 mb-5 bg rounded", local: true) do |f| %>
      <div class="form-group row mt-4">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
          <%= f.text_field :title,required: true, class: "form-control shadow rounded", placeholder: "Title of Article"%>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.text_area :description, required: true, rows: 10, class: "form-control shadow rounded", placeholder:"Description of Article" %>
        </div>
      </div>
      

      <div class="form-group row">
        <%= f.label :category, class: "col-2 col-form-control text-light"%>
        <div class="col-10 ">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, size: 2, prompt: true do |b| %>
            <div class = "check1 pt-2 shadow collection-check-box">
              <%= b.check_box class: "ml-4 "%>
              <%= b.label class: "text-white" %>
            </div>
            <% end %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-large "%>
      </div>

      <% end %>
    </div>
    <%= link_to '[ cancel or return to article list ]', articles_path, class: "text-info h4" %>
  </div>
</div>