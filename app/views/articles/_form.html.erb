
<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors' %>

      <%= form_with(model: @article,class: "shadow p-3 mb-5 bg rounded", local: true) do |f| %>
      <div class="form-group row mt-4">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article"%>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.text_area :description,rows: 10, class: "form-control shadow rounded", placeholder:"Description of Article" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-large "%>
      </div>

      <% end %>
    </div>
    <%= link_to '[ cancel or return to article list ]', articles_path, class: "text-info h4" %>
  </div>
</div>