<h1 class="text-center text-white mt-4 mb-4">Login</h1>


<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">

      <%# <%= render 'shared/errors', obj: @user%>

      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg rounded", local: true) do |f| %>
     
      <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email Address" %>
        </div>
      </div>
      <div class="form-group row mt-4">
          <%= f.label :password, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Enter your password" %>
        </div>
      </div>
      <div class="form-group row mt-5 justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg "%>
      </div>

      <% end %>
    </div>
    <%= link_to '[ cancel or return to article list ]', articles_path, class: "text-info h4" %>
  </div>
</div>